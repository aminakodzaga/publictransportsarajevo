<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lines.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/applogo"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/company_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/vehicle_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle ID: "
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/company_logo"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start destination:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/vehicle_id"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End destination:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/start"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/vehicle_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle ID: "
        app:layout_constraintTop_toBottomOf="@id/company_logo"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/vehicle_id"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/start_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start destination:"
        app:layout_constraintTop_toBottomOf="@id/vehicle_id"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/start"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/end_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End destination:"
        app:layout_constraintTop_toBottomOf="@id/start"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/end"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/vehicle_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFBE00"
        android:text="CHECK VEHICLE INFO"/>

</androidx.constraintlayout.widget.ConstraintLayout>